%h2
  Registrierung ändern
= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f|
  = devise_error_messages!
  %p
    = f.label :email, "E-Mail"
    %br/
    = f.text_field :email
  %p
    = f.label :password, "neues Passwort"
    %i (Leer lassen, wenn Sie es nicht ändern wollen.)
    %br/
    = f.password_field :password
  %p
    = f.label :password_confirmation, "Wiederholung des neuen Passworts"
    %br/
    = f.password_field :password_confirmation
  %p
    = f.label :current_password, "aktuelles Passwort"
    %br/
    = f.password_field :current_password
  %p= f.submit "Ändern"
%h3 Zugang löschen
%p
  Unzufrieden? Dann einfach #{link_to "Zugang löschen.", registration_path(resource_name), :confirm => "Sicher?", :method => :delete}.
= link_to "Zurück", :back
