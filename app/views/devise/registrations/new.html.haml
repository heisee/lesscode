%h2 Registrieren
= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
  = devise_error_messages!
  %p
    = f.label :username, "Login-Name"
    %br/
    = f.text_field :username
  %p
    = f.label :email, "E-Mail"
    %br/
    = f.text_field :email
  %p
    = f.label :password, "Passwort"
    %br/
    = f.password_field :password
  %p
    Als Schutz vor Spam beantworten Sie bitte diese Frage:
    %br/
    = f.label :humanizer_answer, resource.humanizer_question
    %br/
    = f.text_field :humanizer_answer 
    = f.hidden_field :humanizer_question_id
  %br/
  %p
    = f.check_box :accept_tos_and_privacy
    = f.label :accept_tos_and_privacy, "<small>Ich akzeptiere die #{link_to "Datenschutzbestimmungen", "http://www.lesscode.de/privacy/"} und #{link_to "AGB", "http://www.lesscode.de/tos/"} der telewebber GmbH</small>".html_safe
  
  %p= f.submit "Registrieren"
= render :partial => "devise/shared/links"
